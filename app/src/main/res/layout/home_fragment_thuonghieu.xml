<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:weightSum="100"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_banner"
        android:layout_weight="30"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/banner"
        />

    <LinearLayout
        android:id="@+id/layout_thuonghieu"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="70"
        android:gravity="center">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:background="#99000000"
                android:id="@+id/layout_thuonghieu_progress"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">
                <TextView
                    android:id="@+id/txtv_waitconnected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:text="Đang đợi mạng"
                    android:layout_alignBottom="@+id/img_thuonghieu"
                    android:layout_toStartOf="@+id/layout_thuonghieu"
                    android:layout_toLeftOf="@+id/layout_thuonghieu"
                    android:visibility="visible"
                    />
                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <GridView
                android:alwaysDrawnWithCache="true"
                android:drawSelectorOnTop="true"
                android:columnWidth="155dp"
                android:verticalSpacing="5dp"
                android:horizontalSpacing="5dp"
                android:id="@+id/grv_thuonghieu"
                android:layout_width="match_parent"
                android:stretchMode="columnWidth"
                android:layout_height="match_parent"
                android:numColumns="2"/>

            <Button
                android:id="@+id/btn_loadmore"
                android:layout_width="match_parent"
                android:text="Load More"
                android:textColor="#FFFFFF"
                android:layout_height="wrap_content"
                android:background="#99000000"
                android:visibility="gone"
                android:layout_gravity="center_horizontal|bottom" />
        </FrameLayout>

    </LinearLayout>


</LinearLayout>