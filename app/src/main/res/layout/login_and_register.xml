<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:weightSum="100"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login_and_Register"
    android:orientation="vertical"
    android:background="@drawable/ofast_background">
    <View
        android:layout_weight="70"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_weight="30"
        android:weightSum="100"
        android:adjustViewBounds="true"
        android:id="@+id/linearlayout_forwarding"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFF">

        <TextView
            android:id="@+id/txtv_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="35"
            android:text="Trôû thaønh thaønh vieân ñeå nhaän moïi öu ñaõi"
           android:gravity="center"
            android:textColor="#000000"
            android:textSize="20dp"/>

        <LinearLayout
            android:layout_weight="25"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:weightSum="100"
            android:layout_height="0dp">
            <View
                android:layout_weight="10"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <Button
                android:layout_weight="35"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Register"
                android:textColor="#FFFF"
                android:background="@drawable/custom_button_login_register"
                android:id="@+id/btn_register" />
            <View
                android:layout_weight="10"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
            <Button
                android:layout_weight="35"
                android:id="@+id/btn_login"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Login"
                android:textColor="#FFFF"
                android:background="@drawable/custom_button_login_register" />
            <View
                android:layout_weight="10"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <ImageView
            android:layout_weight="20"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:src="@drawable/login_and_register_maybe_late"/>
        <TextView
            android:id="@+id/txtv_tryapp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="#56b847"
            android:gravity="center"
            android:textStyle="italic"
            android:layout_weight="20"
            android:text="JUST TRY THE APP"
            android:layout_marginBottom="20px"/>
    </LinearLayout>

</LinearLayout>
