<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.hung.ofastapp.Product">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:theme="@style/ToolBar"
        app:popupTheme="@style/AppTheme.PopupOverlay">
        <LinearLayout
            android:weightSum="100"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="84"
                android:id="@+id/txtv_tenthuonghieu"
                android:layout_height="match_parent" />
           <LinearLayout
               android:id="@+id/lnlo_giohang"
               android:orientation="vertical"
               android:weightSum="100"
               android:layout_weight="15"
               android:layout_width="0dp"
               android:background="@drawable/nav_cart"
               android:layout_height="match_parent">
              <View
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="30"/>
               <TextView
                   android:id="@+id/txtv_soluong"
                   android:layout_weight="40"
                   android:layout_gravity="right"
                   android:layout_width="wrap_content"
                   android:layout_height="0dp"
                   android:gravity="center"
                   android:text="1"
                   android:visibility="gone"
                   android:textColor="@color/colorPrimary"
                   android:background="@drawable/custom_product_giohang_textview"/>
               <View
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:layout_weight="30"/>
           </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout

        android:weightSum="100"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:layout_weight="60"
            android:id="@+id/view_pager"
            />
        <TextView
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiáº¿t"/>
        <View
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9E9E9E"/>
        <ListView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="7dp"
            android:id="@+id/lv_thongtinsanpham"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30">
        </ListView>
        <LinearLayout
            android:background="#E0E0E0"
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="11"
            android:layout_gravity="center"
            android:weightSum="100">

            <Button
                android:text="-"
                android:textSize="30sp"
                android:id="@+id/btn_tru"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="15"/>
            <TextView
                android:layout_weight="15"
                android:id="@+id/txtv_soluongsanpham"
                android:text="1"
                android:textColor="#ca4c4a"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <Button
                android:text="+"
                android:textSize="30sp"
                android:layout_weight="15"
                android:id="@+id/btn_cong"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <View
                android:layout_width="0dp"
                android:layout_weight="15"
                android:layout_height="match_parent"/>
            <Button
                android:background="@drawable/custom_order_button"
                android:textColor="#FFFFFF"
                android:id="@+id/btn_addtocart"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:text="Add to CART"
                android:visibility="visible"
                android:gravity="center"
                android:layout_gravity="center"/>
        </LinearLayout>


    </LinearLayout>



</LinearLayout>
