<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_weight="90"
        android:weightSum="100"
        android:layout_height="0dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_product"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="45"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/ofast_background_login_register"/>
        <TextView
            android:id="@+id/txtv_tensanpham"
            android:text="Tên Sản Phẩm"
            android:gravity="center"
           android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"/>
        <TextView
            android:text="Giá hơi đắt"
            android:gravity="center"
            android:textSize="15sp"
            android:id="@+id/txtv_giasanpham"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chi tiết"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#9E9E9E"/>
       <ListView
           android:layout_marginLeft="5dp"
           android:layout_marginRight="5dp"
           android:id="@+id/lv_thongtinsanpham"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="40">
       </ListView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:weightSum="100">

    <Button
        android:id="@+id/btn_tru"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="15"/>
     <TextView
         android:layout_weight="15"
         android:id="@+id/txtv_soluongsanpham"
         android:text="12 "
         android:textSize="30dp"
         android:gravity="center"
         android:layout_width="0dp"
         android:layout_height="match_parent" />
        <Button
            android:layout_weight="15"
            android:id="@+id/btn_cong"
            android:layout_gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <View
            android:layout_width="0dp"
            android:layout_weight="15"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btn_addtocart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:text="Add to CART"
            android:gravity="center"
            android:layout_gravity="center"/>
    </LinearLayout>


</LinearLayout>