<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#ff1e00" />
            <stroke
                android:width="1dp"
                android:color="#ff1e00" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5px"
                android:right="5px"
                />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#66cf56"
                android:endColor="#66cf56"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#66cf56" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="20px"
                android:right="20px"
                />

        </shape>
    </item>
</selector>