<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#EF5350" />
            <stroke
                android:width="1dp"
                android:color="#EF5350" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5px"
                android:right="5px"
                />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#00000000"
                android:endColor="#00000000"
                android:angle="360" />
            <stroke
                android:width="1dp"
                android:color="#f6bcbfbc" />
            <corners
                android:radius="3dp" />
            />

        </shape>
    </item>
</selector>