<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <gradient
                android:startColor="#ffffff"
                android:endColor="#ffffff"
               />
            <stroke
                android:width="1dp"
                android:color="#ffffff" />
            <corners
                android:radius="30dp" />
            <padding
                android:left="10dp"
                android:right="10dp"
                />

        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#66cf56" />
            <stroke
                android:width="1dp"
                android:color="#66cf56" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5px"
                android:right="5px"
                />
        </shape>
    </item>
</selector>