<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#66cf56" />
            <stroke
                android:width="1dp"
                android:color="#66cf56" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:right="5dp"
                />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#EF5350"
                android:endColor="#EF5350"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#EF5350" />
            <corners
                android:radius="3dp" />



        </shape>
    </item>
</selector>